<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/ll_all_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_bottom_01"
                style="@style/bottom_ll_style">

                <RelativeLayout
                    android:layout_width="@dimen/main_bottom_out_width"
                    android:layout_height="@dimen/main_bottom_out_width">

                    <ImageView
                        android:id="@+id/iv_bottom_01"
                        style="@style/bottom_iv_style"
                        android:src="@mipmap/t_mallinfo_unchecked" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_bottom_01"
                    style="@style/bottom_tv_style"
                    android:text="资讯" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_02"
                style="@style/bottom_ll_style">

                <RelativeLayout
                    android:layout_width="@dimen/main_bottom_out_width"
                    android:layout_height="@dimen/main_bottom_out_width">

                    <ImageView
                        android:id="@+id/iv_bottom_02"
                        style="@style/bottom_iv_style"
                        android:src="@mipmap/t_mallclassification_unchecked" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_bottom_02"
                    style="@style/bottom_tv_style"
                    android:text="分类" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_03"
                style="@style/bottom_ll_style">

                <RelativeLayout
                    android:layout_width="@dimen/main_bottom_out_width"
                    android:layout_height="@dimen/main_bottom_out_width">

                    <ImageView
                        android:id="@+id/iv_bottom_03"
                        style="@style/bottom_iv_style"
                        android:src="@mipmap/t_mallmarket_checked" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_bottom_03"
                    style="@style/bottom_tv_style"
                    android:text="商场"
                    android:textColor="@color/theme_tsq_market" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_04"
                style="@style/bottom_ll_style">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_bottom_04"
                        style="@style/bottom_iv_style2"
                        android:src="@mipmap/t_malldiscount_unchecked" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_05"
                style="@style/bottom_ll_style">

                <RelativeLayout
                    android:layout_width="@dimen/main_bottom_out_width"
                    android:layout_height="@dimen/main_bottom_out_width">

                    <ImageView
                        android:id="@+id/iv_bottom_05"
                        style="@style/bottom_iv_style"
                        android:src="@mipmap/t_mallmy_unchecked" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_bottom_05"
                    style="@style/bottom_tv_style"
                    android:text="我的" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
