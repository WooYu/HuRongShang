<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <com.lcworld.shopdemo.base.Actionbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/actionbar_color"
        app:leftBackground="@mipmap/ic_back"
        app:titleText="切换主页"
        app:titleTextSize="@dimen/actionbar_title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ll_chat_setting_style"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/tv_chat_setting_style"
                android:text="人脉圈" />

            <ImageView
                android:id="@+id/iv_rmq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_chat_setting_style"
            android:layout_height="60dp"
            android:layout_marginTop="1dp">

            <TextView
                style="@style/tv_chat_setting_style"
                android:text="拓商圈" />

            <ImageView
                android:id="@+id/iv_tsq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_chat_setting_style"
            android:layout_height="60dp"
            android:layout_marginTop="1dp">

            <TextView
                style="@style/tv_chat_setting_style"
                android:text="社团圈" />

            <ImageView
                android:id="@+id/iv_stq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_chat_setting_style"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/tv_chat_setting_style"
                android:text="移办公" />

            <ImageView
                android:id="@+id/iv_ybg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>