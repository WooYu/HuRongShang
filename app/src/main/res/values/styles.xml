    <style name="normal_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">@dimen/all_padding_left</item>
        <item name="android:layout_marginRight">@dimen/all_padding_left</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/shape_bg_btn_green_half</item>
